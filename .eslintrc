{
  "extends": "airbnb",

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "rules": {
    "comma-dangle": ["error", "never"],
    "react/jsx-curly-spacing": ["error", {"when": "always"}]
  }
}
